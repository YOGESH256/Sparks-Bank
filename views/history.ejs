<%- include("partials/header") -%>

<div class="container my-2" >

        <div class="card w-75 offset-lg-2">
            <div class="card-header">
                <h3 style="text-transform: capitalize;">
                  All transactions  <%= t.username %> 
                </h3>
            </div>
            <ul class="list-group list-group-flush bg-light">
                <% if(t.transactions.length > 0) { %>
                    <% for(let c of t.transactions) {%>
                        <li class="list-group-item list-group-item-action list-group-item-light my-2 " style="text-transform: capitalize;">
                          <%= c.Description %> <b>-----</b> <i><%= c.comment %></i> <b>----- <%= c.Date %></b>
                        </li>
                        <% } %>
                <% } else { %>
                    <li class="list-group-item list-group-item-action list-group-item-light" style="text-transform: capitalize;">
                        Sorry!!!! No transactions Yet........
                    </li>
                <% } %>
            </ul>
            <div class="card-body">
                <a class="btn btn-success" href="/">Back</a>
              </div>
        </div>
    </div>






<%- include("partials/footer") %>
